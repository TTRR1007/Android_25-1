<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_main_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_main_num"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/btn_main_toast"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_main_count"
        app:layout_constraintTop_toTopOf="@id/btn_main_count" />

    <Button
        android:id="@+id/btn_main_count"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_count"
        app:layout_constraintStart_toEndOf="@id/btn_main_toast"
        app:layout_constraintEnd_toStartOf="@id/btn_main_random"
        app:layout_constraintTop_toBottomOf="@id/tv_main_num"
        android:layout_marginTop="180dp"/>

    <Button
        android:id="@+id/btn_main_random"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_random"
        app:layout_constraintStart_toEndOf="@id/btn_main_count"
        app:layout_constraintTop_toTopOf="@id/btn_main_count"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>